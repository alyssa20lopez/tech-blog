  <script defer src="https://use.fontawesome.com/releases/v5.3.1/js/all.js"></script>
</head>

<body>
  <div class="container wrapper">
    <header id="home" class="row">
      <h1><a class="logo" href="/">The Tech Girl</a></h1>
      <nav class="navbar">
          <a class="navbar-item" href="/">Home</a>
          <a class="navbar-item" href="/dashboard">Dashboard</a>
          {{#if logged_in}}
          <a class="navbar-item" href="/login" id="logout">Logout</a>
          {{else}}
          <a class="navbar-item login" href="/login">Login</a>
          {{/if}}
      </nav>


    </header>

    <main>
      {{{ body }}}
    </main>

    <footer class="footer">
      <div class="row">
        <p>
          The Tech Girl by <a href="https://github.com/alyssa20lopez">Alyssa Lopez</a>
        </p>
      </div>
    </footer>
    {{#if logged_in}}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js" integrity="sha384-aJ21OjlMXNL5UyIl/XNwTMqvzeRMZH2w8c5cRVpzpU8Y5bApTppSuUkhZXN0VxHd" crossorigin="anonymous"></script>
